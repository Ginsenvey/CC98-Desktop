<?xml version="1.0" encoding="utf-8"?>
<Page
    x:Class="App3.Repeater"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:App3"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    xmlns:ic="using:FluentIcons.WinUI"
    Background="{ThemeResource DesktopAcrylicTransparentBrush}">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*" MinHeight="90"></RowDefinition>
            <RowDefinition Height="12*"></RowDefinition>
        </Grid.RowDefinitions>
        <StackPanel Orientation="Horizontal" Grid.Row="0" Padding="20" Spacing="15">
            
            <TextBlock Text="默认分组" FontSize="18" FontWeight="Bold"  Foreground="{ThemeResource AccentAAFillColorSecondaryBrush}" VerticalAlignment="Center"></TextBlock>
            <HyperlinkButton Background="Transparent" Width="45" Height="45">
                <ic:SymbolIcon Symbol="Add"></ic:SymbolIcon>
            </HyperlinkButton>
            <HyperlinkButton Background="Transparent" Width="45" Height="45">
                <ic:SymbolIcon Symbol="ArrowSort"></ic:SymbolIcon>
            </HyperlinkButton>
        </StackPanel>
        
        <ScrollViewer Grid.Row="1">
            <ItemsRepeater ItemsSource="{x:Bind tiles}" >
                <ItemsRepeater.ItemTemplate>
                    <DataTemplate>
                        <HyperlinkButton HorizontalContentAlignment="Stretch" HorizontalAlignment="Stretch" CornerRadius="0" x:Name="TileContent" >
                            <Grid Padding="10" RowSpacing="3">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="60"></ColumnDefinition>
                                    <ColumnDefinition Width="4*"></ColumnDefinition>
                                    <ColumnDefinition Width="2*"></ColumnDefinition>
                                    <ColumnDefinition Width="2*"></ColumnDefinition>
                                </Grid.ColumnDefinitions>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="*"></RowDefinition>
                                    <RowDefinition Height="*"></RowDefinition>
                                </Grid.RowDefinitions>
                                <TextBlock Text="{Binding sort}" Grid.Column="0" Grid.Row="0" Grid.RowSpan="2" Foreground="{ThemeResource TextFillColorSecondaryBrush}" VerticalAlignment="Center" HorizontalAlignment="Center" HorizontalTextAlignment="Center"></TextBlock>
                                <TextBlock Text="{Binding section}" Grid.Column="3" Grid.Row="0"  VerticalAlignment="Top"></TextBlock>
                                <TextBlock Text="{Binding title}" Grid.Column="1" Grid.Row="0" Grid.RowSpan="2" VerticalAlignment="Center" Foreground="{ThemeResource TextFillColorSecondaryBrush}"></TextBlock>
                                <TextBlock Text="{Binding time}" Grid.Column="3" Grid.Row="1"  VerticalAlignment="Bottom" Foreground="{ThemeResource TextFillColorSecondaryBrush}"></TextBlock>

                            </Grid>
                        </HyperlinkButton>
                    </DataTemplate>
                </ItemsRepeater.ItemTemplate>
            </ItemsRepeater>
        </ScrollViewer>
        
        
    </Grid>
</Page>
